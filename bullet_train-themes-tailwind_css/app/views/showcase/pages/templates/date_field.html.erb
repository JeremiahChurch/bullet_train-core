<% showcase.badge :partial %>
<% showcase.description "A field partial for rendering a date field." %>

<% form = form_with(model: Scaffolding::CompletelyConcrete::TangibleThing.new, url: "") { break _1 } %>

<% showcase.sample "Date field" do %>
  <%= render "shared/fields/date_field",
      form: form,
      method: :date_field_value,
      options: { autofocus: true },
      other_options: { help: "Help text can be configured in locale files." } %>
<% end %>

<% showcase.sample "Date field displaying above input" do %>
  <%= render "shared/fields/date_field",
        form: form,
        method: :date_field_value,
        display_above_input: true,
        options: { autofocus: true } %>
<% end %>

<% showcase.sample "Date field with optional width class" do %>
  <%= render "shared/fields/date_field",
      form: form,
      method: :date_field_value,
      other_options: { wrapper_class: "w-full xl:w-1/5" } %>
<% end %>

<% showcase.sample "Date field with error" do %>
  <% form.object.errors.add(:date_field_value, "is required") %>

  <%= render "shared/fields/date_field",
      form: form,
      method: :date_field_value,
      options: { autofocus: true } %>
<% end %>

<% showcase.options do |o| %>
  <% o.required :form, "A reference to a Rails form object.", type: Object %>
  <% o.required :method, "The attribute the form field represents.", type: "Symbol | String" %>
  <% o.optional :options, "Options passed through to native Rails form field helper.", type: Hash %>
  <% o.optional :other_options, "BulletTrain-specific options for this field partial.", type: Hash %>
  <% o.optional "other_options[:future_only]", "Renders with an only future options.", default: false %>
<% end %>
