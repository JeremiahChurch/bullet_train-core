<% application ||= @application %>
<% team ||= @team || application&.team %>
<%= render 'account/teams/breadcrumbs', team: team %>
<%= render 'shared/breadcrumb', label: t('.label'), url: [:account, team, :platform_applications] %>
<% if application&.persisted? %>
  <%= render 'shared/breadcrumb', label: application.label_string, url: [:account, application] %>
<% end %>
<%= render 'shared/breadcrumbs/actions', only_for: 'platform/applications' %>
